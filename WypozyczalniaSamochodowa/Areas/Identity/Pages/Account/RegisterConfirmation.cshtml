@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<div style="background-color: #004a80; color: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2);">
    <div class="container">
        <h1 style="margin: 0; text-align: center; font-size: 28px;">Potwierdzenie Rejestracji</h1>
        <p class="text-center" style="font-size: 1.1em;">Dziękujemy za rejestrację! Aby zakończyć proces, potwierdź swój adres e-mail.</p>
    </div>
</div>

<div class="container" style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
    @if (Model.DisplayConfirmAccountLink)
    {
        
        <p style="text-align: center;">
            
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary mt-3">Potwierdź swoje konto</a>
        </p>
    }
    else
    {
        <p style="text-align: center; font-size: 1.1em; color: #555;">
            Sprawdź swoją skrzynkę e-mail, aby potwierdzić swoje konto.
        </p>
    }
</div>

<div class="text-center mt-4">
    <a asp-page="/Index" class="btn btn-secondary" style="padding: 10px 20px;">Powrót do strony głównej</a>
</div>
