@model WypozyczalniaSamochodowa.Models.Auto

@{
    ViewData["Title"] = "Edytuj Auto";
}

<div style="background-color: #004a80; color: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2);">
    <div class="container">
        <h1 style="margin: 0; text-align: center; font-size: 28px;">Edytuj Auto</h1>
        <p class="text-center" style="font-size: 1.1em;">Zaktualizuj szczegóły dotyczące wybranego samochodu.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data" style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AutoId" />

              
                <div class="form-group mb-3">
                    <label asp-for="Marka" class="form-label">Marka</label>
                    <input asp-for="Marka" class="form-control" />
                    <span asp-validation-for="Marka" class="text-danger"></span>
                </div>

               
                <div class="form-group mb-3">
                    <label asp-for="Model" class="form-label">Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                
                <div class="form-group mb-3">
                    <label asp-for="Silnik" class="form-label">Silnik</label>
                    <input asp-for="Silnik" class="form-control" />
                    <span asp-validation-for="Silnik" class="text-danger"></span>
                </div>

               
                <div class="form-group mb-3">
                    <label asp-for="RokProdukcji" class="form-label">Rok Produkcji</label>
                    <input asp-for="RokProdukcji" class="form-control" />
                    <span asp-validation-for="RokProdukcji" class="text-danger"></span>
                </div>

               
                <div class="form-group mb-3">
                    <label asp-for="Opis" class="form-label">Opis</label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                
                <div class="form-group mb-3">
                    <label asp-for="Cena" class="form-label">Cena (zł / dzień)</label>
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>

                
                <div class="form-group mb-3">
                    <label class="form-label">Obecne zdjęcie</label>
                    @if (!string.IsNullOrEmpty(Model.Zdjecie))
                    {
                        <img src="@Model.Zdjecie" class="img-thumbnail" style="max-width: 100%; max-height: 200px; margin-top: 10px;" />
                    }
                    else
                    {
                        <p class="text-muted">Brak zdjęcia</p>
                    }
                </div>

                
                <div class="form-group mb-3">
                    <label for="noweZdjecie" class="form-label">Nowe zdjęcie</label>
                    <input type="file" id="noweZdjecie" name="noweZdjecie" class="form-control" />
                    <small class="form-text text-muted">Prześlij nowe zdjęcie, aby zaktualizować obecne.</small>
                </div>

                
                <div class="form-group text-center mt-4">
                    <input type="submit" value="Zapisz" class="btn btn-primary btn-lg" style="width: 100%; font-weight: bold;" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary" style="padding: 10px 20px;">Powrót do listy</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
