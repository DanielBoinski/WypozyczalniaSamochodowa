@model WypozyczalniaSamochodowa.Models.Wynajecie

@{
    ViewData["Title"] = "Usuń Wynajęcie";
}

<div style="background-color: #004a80; color: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2);">
    <div class="container">
        <h1 style="margin: 0; text-align: center; font-size: 28px;">Usuń Wynajęcie</h1>
        <p class="text-center" style="font-size: 1.1em;">Czy na pewno chcesz usunąć to wynajęcie?</p>
    </div>
</div>

<div class="container" style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
    <h4 class="mb-4" style="color: #004a80;">Szczegóły Wynajęcia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4" style="font-weight: bold; color: #555;">
            Data Rozpoczęcia
        </dt>
        <dd class="col-sm-8" style="color: #333;">
            @Model.DataRozpoczecia.ToString("dd.MM.yyyy")
        </dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #555;">
            Data Zakończenia
        </dt>
        <dd class="col-sm-8" style="color: #333;">
            @Model.DataZakonczenia.ToString("dd.MM.yyyy")
        </dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #555;">
            Cena Całkowita
        </dt>
        <dd class="col-sm-8" style="color: #333;">
            @Model.CenaCalkowita zł
        </dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #555;">
            Użytkownik
        </dt>
        <dd class="col-sm-8" style="color: #333;">
            @Model.User?.UserName 
        </dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #555;">
            Samochód
        </dt>
        <dd class="col-sm-8" style="color: #333;">
            @Model.Auto?.Marka  @Model.Auto?.Model
        </dd>
    </dl>

    <form asp-action="Delete" method="post" style="margin-top: 20px;">
        <input type="hidden" asp-for="WynajecieId" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger btn-lg" style="font-weight: bold;">Usuń</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg" style="margin-left: 10px;">Wróć do Listy</a>
        </div>
    </form>
</div>
