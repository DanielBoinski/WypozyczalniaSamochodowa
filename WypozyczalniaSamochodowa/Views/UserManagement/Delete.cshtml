@model Microsoft.AspNetCore.Identity.IdentityUser

<div style="background-color: #004a80; color: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2);">
    <div class="container">
        <h1 style="margin: 0; text-align: center; font-size: 28px;">Usuń użytkownika</h1>
        <p class="text-center" style="font-size: 1.1em;">Czy na pewno chcesz usunąć tego użytkownika?</p>
    </div>
</div>

<div class="container" style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
    <table class="table table-bordered" style="margin-top: 20px;">
        <tr>
            <th style="width: 30%; text-align: left; background-color: #f8f9fa;">Nazwa użytkownika</th>
            <td style="text-align: left;">@Model.UserName</td>
        </tr>
        <tr>
            <th style="width: 30%; text-align: left; background-color: #f8f9fa;">Email</th>
            <td style="text-align: left;">@Model.Email</td>
        </tr>
    </table>

    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" style="margin-top: 20px;">
        <div class="text-center">
            <button type="submit" class="btn btn-danger btn-lg" style="width: 100%; font-weight: bold;">Usuń</button>
            <a asp-action="Index" class="btn btn-secondary mt-3" style="padding: 10px 20px; display: block;">Anuluj</a>
        </div>
    </form>
</div>
