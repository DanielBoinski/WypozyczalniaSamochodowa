@model WypozyczalniaSamochodowa.Models.Oferta

@{
    ViewData["Title"] = "Szczegóły Oferty";
}

<div style="background-color: #004a80; color: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0px 5px 15px rgba(0,0,0,0.2);">
    <div class="container">
        <h1 style="margin: 0; text-align: center; font-size: 28px; text-transform: uppercase;">Szczegóły Oferty</h1>
        <p class="text-center" style="font-size: 1.1em;">Poznaj szczegóły wybranego pojazdu i zdecyduj, czy jest odpowiedni dla Ciebie.</p>
    </div>
</div>

<div class="container mt-4">
    <div class="row align-items-center">
       
        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.Auto.Zdjecie))
            {
                <img src="@Model.Auto.Zdjecie" alt="Zdjęcie auta" class="img-fluid" style="max-height: 400px; border-radius: 10px; box-shadow: 0px 6px 12px rgba(0,0,0,0.2);">
            }
            else
            {
                <div class="text-center d-flex align-items-center justify-content-center" style="height: 300px; background-color: #e9ecef; color: #555; border-radius: 10px; box-shadow: 0px 6px 12px rgba(0,0,0,0.1);">
                    Brak zdjęcia
                </div>
            }
        </div>

        
        <div class="col-md-6">
            <div style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
                <h2 class="mb-3" style="color: #004a80; text-align: center;">@Model.Auto.Marka @Model.Auto.Model</h2>
                <p style="font-size: 1.1em; color: #555;"><strong>Silnik:</strong> @Model.Auto.Silnik</p>
                <p style="font-size: 1.1em; color: #555;"><strong>Rok Produkcji:</strong> @Model.Auto.RokProdukcji</p>
                <p style="font-size: 1.1em; color: #555;"><strong>Opis:</strong> @Model.Auto.Opis</p>
                <p style="font-size: 1.2em; font-weight: bold; color: #004a80;"><strong>Cena za dzień:</strong> @Model.Auto.Cena zł</p>

                
                <div class="mt-4">
                    <a asp-controller="Wynajecie"
                       asp-action="Create"
                       asp-route-autoId="@Model.Auto.AutoId"
                       asp-route-cena="@Model.Auto.Cena"
                       class="btn btn-success btn-lg w-100" style="font-weight: bold; box-shadow: 0px 4px 6px rgba(0,0,0,0.2);">
                        <i class="fas fa-car"></i> Wypożyczyć
                    </a>
                </div>
            </div>
        </div>
    </div>

    
    <div class="mt-4 text-center">
        <a asp-controller="Oferta"  asp-action="Index" class="btn btn-secondary" style="font-weight: bold; padding: 10px 20px; box-shadow: 0px 4px 6px rgba(0,0,0,0.2);">
            <i class="fas fa-arrow-left"></i> Powrót do listy
        </a>
    </div>
</div>
